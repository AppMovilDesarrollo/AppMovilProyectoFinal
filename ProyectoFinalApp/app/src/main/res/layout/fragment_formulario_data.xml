<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.afinal.proyecto.proyectofinalapp.Formulario_Interface.FormularioDataFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/txtFCli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="@string/txtFormu"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtDName" />

            <EditText
                android:id="@+id/etxtFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/txtFCed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtDCed" />

            <EditText
                android:id="@+id/etxtFCed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text=""
                android:enabled="false"/>

            <TextView
                android:id="@+id/txtFTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtDTel" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etxtFTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="12" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtSalary" />

            <EditText
                android:id="@+id/etxtSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:digits="1234567890"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/txtLugTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtLugTra" />

            <EditText
                android:id="@+id/etxtLugTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/txtFDir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtDDir" />

            <EditText
                android:id="@+id/etxtFDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:ems="10"
                android:inputType="text"
                tools:ignore="InefficientWeight" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tFoto"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tFotoString" />

                <EditText
                    android:id="@+id/tCopiCed"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
             />
            </LinearLayout>

            <Button
                android:id="@+id/bTomarCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titFoto" />
            <Button
                android:id="@+id/bNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bSiguienteTarjeta" />

        </LinearLayout>

    </FrameLayout>
</ScrollView>
