<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.afinal.proyecto.proyectofinalapp.Clientes_Interface.Clientes_Configuracion.ConfiguracionClientesFragment">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="480dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txtMenuConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MenuConf"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtName" />

        <EditText
            android:id="@+id/etxtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/txtCed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtCed" />

        <EditText
            android:id="@+id/etxtCed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/txtTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTel" />

        <EditText
            android:id="@+id/etxtTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="8"
            android:inputType="phone"
            android:text="" />

        <TextView
            android:id="@+id/txtDir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtDir" />

        <EditText
            android:id="@+id/etxtDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />



    </LinearLayout>

</FrameLayout>
